.terminal {
  background: black;
  color: white;
  padding: 5px;
  min-height: 500px;
  box-sizing: border-box;

  textarea {
    height: 500px;
  }
}

.code {
  background: #f4f4f4;
  border: 1px solid #ddd;
  border-left: 3px solid #f36d33;
  color: #666;
  page-break-inside: avoid;
  font-family: monospace;
  line-height: 1.6;
  margin-bottom: 1.6em;
  max-width: 100%;
  overflow: auto;
  padding: 1em 1.5em;
  display: block;
  word-wrap: break-word;
}

.large.code textarea {
  min-height: 500px;
}

.prompt {
  background-color: black;
  border: solid 2px red;
  color: white;
  z-index: 99;
  position: absolute;
  bottom: 100px;
  left: 80px;

  button {
    color: white;
  }
}

.inputs {
  color: black;
}
