view.at-article, view.at-article__section {
  user-select: auto;

  .at-article__h1 {
    user-select: text;
  }

  view {
    user-select: auto;
  }

  img {
    max-width: 100%;
  }
}

.at-article__content {
  padding: 1em;
}

code {
  white-space: pre-wrap !important;
  counter-reset: step;
  counter-increment: step 0;
  margin-left: 40px;
  min-width: calc(100% - 40px) !important;
}

